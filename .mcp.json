{
  "mcpServers": {
    "playwright": {
      "name": "Playwright MCP Server",
      "description": "Browser automation capabilities for Favbet test automation",
      "command": "npx",
      "args": ["@playwright/mcp"],
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "./browsers",
        "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "0"
      },
      "capabilities": {
        "browser_automation": true,
        "accessibility_testing": true,
        "screenshot_capture": true,
        "test_generation": true,
        "javascript_execution": true
      },
      "config": {
        "persistent_context": true,
        "headless": false,
        "viewport": {
          "width": 1280,
          "height": 720
        },
        "locale": "uk-UA",
        "timezone": "Europe/Kiev",
        "permissions": ["notifications", "geolocation"],
        "extra_http_headers": {
          "Accept-Language": "uk-UA,uk;q=0.9,en;q=0.8"
        }
      }
    }
  },
  "project": {
    "name": "favbet-test-automation",
    "description": "Favbet.ua test automation project using Playwright",
    "test_urls": {
      "production": "https://favbet.ua",
      "staging": "https://staging.favbet.ua"
    }
  }
}
